<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h2>Genre Name: <%=@genre.name%></h2>

    <h2>Artists: </h2>
    <%@genre.artists.each do |artist| %>
    <p>
      <%id=artist.slug%>
      <a href="/artists/<%=id%>"> <%=artist.name%></a>
    </p>
    <%end%>

    <h2>Songs: </h2>
    <%@genre.songs.each do |song| %>
    <p>
      <%id=song.slug%>
      <a href="/songs/<%=id%>"> <%=song.name%></a>
    </p>
    <%end%>

  </body>
